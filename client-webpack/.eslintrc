{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "globals": {
    "document": true,
    "window": true,
    "fetch": true,
    "navigator": true,
    "localStorage": true
  },
  "plugins": [
    "babel",
    "react"
  ],
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "indent": ["error", 2, { "SwitchCase": 1 }],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "space-in-parens": ["error"],
      "space-infix-ops": "error",
      "object-curly-spacing": ["error", "always"],
      "comma-spacing": "error",
      "space-before-function-paren": ["error", {
          "anonymous": "never",
          "named": "never",
          "asyncArrow": "always"
        }
      ],
      "eol-last": ["error", "always"],
      "keyword-spacing": [
        "error",
        {
          "before": true,
          "after": true
        }
      ],
      "array-bracket-spacing": "error",
      "no-extra-boolean-cast":"off",
      "babel/no-invalid-this": 1,
      "babel/semi": 1,
      "react/prop-types": "off"
  }
}
